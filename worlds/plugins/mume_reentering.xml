<!-- Plugin "mume_reentering" generated by Plugin Wizard -->

<muclient>
<plugin
   name="mume_reentering"
   author="Nick Stockton"
   id="630ffb28e267d3e40bb756e1"
   language="Lua"
   purpose="Allows the player to reenter the room they just fled or escaped out of."
   date_written="2012-08-19 09:39:01"
   requires="4.70"
   version="1.0"
   >

</plugin>


<!--  Get our standard constants -->

<include name="constants.lua"/>

<!--  Triggers  -->

<triggers>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="You flee head over heels."
   name="gag_flee_message"
   omit_from_output="y"
   sequence="100"
  >
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="You seek to escape..."
   name="gag_escape_message"
   omit_from_output="y"
   sequence="100"
  >
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="^PANIC\! You (couldn&apos;t escape|can&apos;t quit the fight)\!$"
   name="Shorten_panic_message"
   omit_from_output="y"
   regexp="y"
   send_to="2"
   sequence="100"
  >
  <send>Panic!</send>
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="^You flee (?P&lt;direction&gt;north|south|east|west|up|down)\.$"
   name="fleeing"
   omit_from_output="y"
   regexp="y"
   send_to="14"
   sequence="100"
  >
  <send>
fled_direction = "%&lt;direction&gt;"
CallPlugin(TTS, "silence")
Note(fled_direction, "!")
  </send>
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="You failed to escape the fight!"
   name="fail_escape"
   omit_from_output="y"
   send_to="14"
   sequence="100"
  >
  <send>
CallPlugin(TTS, "silence")
Note("Failed!")
  </send>
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="You successfully escaped the fight!"
   name="successful_escape"
   omit_from_output="y"
   send_to="14"
   sequence="100"
  >
  <send>
fled_direction = nil
CallPlugin(TTS, "silence")
  </send>
  </trigger>
  <trigger
   enabled="y"
   group="mume_reentering"
   match="You feel stealthy again."
   name="stealthy_again"
   omit_from_output="y"
   send_to="14"
   sequence="100"
  >
  <send>
CallPlugin(TTS, "silence")
Note("Stealthy!")
  </send>
  </trigger>
</triggers>

<!--  Aliases  -->

<aliases>
  <alias
   name="escape_north"
   match="nn"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape north</send>
  </alias>
  <alias
   name="escape_east"
   match="ee"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape east</send>
  </alias>
  <alias
   name="escape_south"
   match="ss"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape south</send>
  </alias>
  <alias
   name="escape_west"
   match="ww"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape west</send>
  </alias>
  <alias
   name="escape_up"
   match="uu"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape up</send>
  </alias>
  <alias
   name="escape_down"
   match="dd"
   enabled="y"
   group="mume_reentering"
   sequence="100"
  >
  <send>escape down</send>
  </alias>
  <alias
   name="reenter_room"
   match="v"
   enabled="y"
   group="mume_reentering"
   send_to="12"
   sequence="100"
  >
  <send>reenter()</send>
  </alias>
</aliases>

<!--  Script  -->


<script>
<![CDATA[
TTS = "925cdd0331023d9f0b8f05a7"
REVERSE_DIRECTIONS = {
	["north"] = "south",
	["east"] = "west",
	["south"] = "north",
	["west"] = "east",
	["up"] = "down",
	["down"] = "up"
}

fled_direction = nil

function reenter()
	if REVERSE_DIRECTIONS[fled_direction] then
		Send(REVERSE_DIRECTIONS[fled_direction])
		fled_direction = nil
	end
end

]]>
</script>


</muclient>
